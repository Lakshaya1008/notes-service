# ========================================
# NOTES APP - ENVIRONMENT CONFIGURATION TEMPLATE
# ========================================
# Copy this file to .env and update values for your environment
# DO NOT commit .env to version control (only .env.example)
# ========================================

# ========================================
# DATABASE CONFIGURATION (REQUIRED)
# ========================================
DB_URL=jdbc:postgresql://localhost:5432/notesapp_db
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=10
DB_MIN_IDLE=2
DB_CONNECTION_TIMEOUT=30000

# ========================================
# JWT CONFIGURATION (REQUIRED)
# ========================================
# IMPORTANT: Generate a secure secret for production
# Generate with: openssl rand -base64 32
JWT_SECRET=your_secure_jwt_secret_here
# Token expiration in milliseconds (default: 24 hours = 86400000)
JWT_EXPIRATION=86400000

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=8080
APP_NAME=notesapp

# ========================================
# JPA / HIBERNATE
# ========================================
# Options: none, validate, update, create, create-drop
# Production recommendation: validate or none (use migrations)
JPA_DDL_AUTO=update
SHOW_SQL=false

# ========================================
# SQL INITIALIZATION
# ========================================
# Options: always, embedded, never
# Production recommendation: never (use migrations or manual seeding)
SQL_INIT_MODE=always
SQL_CONTINUE_ON_ERROR=true

# ========================================
# LOGGING
# ========================================
# Options: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO
LOG_LEVEL_SECURITY=WARN
LOG_LEVEL_SQL=WARN

# ========================================
# ERROR HANDLING
# ========================================
# Options: always, on_param, never
ERROR_INCLUDE_MESSAGE=never
ERROR_INCLUDE_STACKTRACE=never

# ========================================
# ACTUATOR / HEALTH CHECK
# ========================================
ACTUATOR_ENDPOINTS=health,info
HEALTH_SHOW_DETAILS=never

