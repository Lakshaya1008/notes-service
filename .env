# ========================================
# NOTES APP - ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and update values for your environment
# DO NOT commit .env to version control
# ========================================

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_URL=jdbc:postgresql://localhost:5432/notesapp_db
DB_USERNAME=postgres
DB_PASSWORD=postgres123
DB_POOL_SIZE=10
DB_MIN_IDLE=2

# ========================================
# JWT CONFIGURATION
# ========================================
# IMPORTANT: Generate a secure secret for production
# Example: openssl rand -base64 32
JWT_SECRET=gSJ4oTeHHUcr+NFvfyW4t0AArQ0/EODgjh+QLKLVKAw=
JWT_EXPIRATION=86400000

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=8080

# ========================================
# JPA / HIBERNATE
# ========================================
# Options: none, validate, update, create, create-drop
JPA_DDL_AUTO=update
SHOW_SQL=false

# ========================================
# SQL INITIALIZATION
# ========================================
# Options: always, embedded, never
SQL_INIT_MODE=always

# ========================================
# LOGGING
# ========================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO
